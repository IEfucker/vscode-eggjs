{
  "name": "eggjs",
  "displayName": "eggjs",
  "description": "vscode extension for https://eggjs.org/",
  "version": "0.0.6",
  "publisher": "atian25",
  "homepage": "https://github.com/eggjs/vscode-eggjs",
  "repository": {
    "type": "git",
    "url": "git@github.com:eggjs/vscode-eggjs.git"
  },
  "engines": {
    "vscode": "^1.17.0"
  },
  "icon": "resources/eggjs.png",
  "categories": [
    "Languages",
    "Debuggers",
    "Snippets"
  ],
  "activationEvents": [
    "onView:eggDependencies",
    "onView:eggConfig",
    "workspaceContains:node_modules/egg/package.json"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "eggjs options",
      "properties": {
        "eggjs.sidebar.dependencies": {
          "type": "boolean",
          "default": true,
          "description": "Show or hide the Dependencies Explorer."
        },
        "eggjs.sidebar.config": {
          "type": "boolean",
          "default": true,
          "description": "Show or hide the Config Explorer."
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "eggDependencies",
          "name": "Egg Dependencies",
          "when": "config.eggjs.sidebar.dependencies"
        },
        {
          "id": "eggConfig",
          "name": "Egg Config",
          "when": "config.eggjs.sidebar.config"
        }
      ]
    },
    "commands": [
      {
        "command": "eggDependencies.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "eggConfig.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "eggDependencies.refreshEntry",
          "when": "view == eggDependencies",
          "group": "navigation"
        },
        {
          "command": "eggConfig.refreshEntry",
          "when": "view == eggConfig",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/egg.json"
      }
    ]
  },
  "scripts": {
    "vspub": "vsce publish",
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "clear-module": "^2.1.0",
    "globby": "^6.1.0",
    "is-type-of": "^1.2.0",
    "mz": "^2.6.0",
    "node-homedir": "^1.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "autod": "^2.10.1",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  }
}
