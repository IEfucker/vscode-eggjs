{
  "name": "vscode-eggjs",
  "displayName": "vscode-eggjs",
  "description": "vscode extension for https://eggjs.org/",
  "version": "0.0.1",
  "publisher": "TZ",
  "engines": {
    "vscode": "^1.15.0"
  },
  "categories": [
    "Languages",
    "Debuggers",
    "Snippets"
  ],
  "activationEvents": [
    "onView:eggDependencies"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "eggDependencies",
          "name": "Egg Dependencies"
        }
      ]
    },
    "commands": [
      {
        "command": "eggDependencies.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "eggDependencies.refreshEntry",
          "when": "view == eggDependencies",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/egg.json"
      }
    ]
  },
  "scripts": {
    "vspub": "vsce publish",
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "globby": "^6.1.0"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  }
}
